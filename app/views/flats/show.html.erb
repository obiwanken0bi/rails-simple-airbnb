<%= image_tag(@flat.picture_url, height: '350', width: '100%', class: 'flat-img') %>

<div class="container show-container">
  <div class="flat-container d-flex">
    <div class="col-8">
      <div class="flat-title p-3 mb-3">
        <h1><%= @flat.name %></h1>
        <p><%= @flat.address %></p>
      </div>

      <div class="flat-description p-3 mb-3">
        <h2>A bit more about this flat...</h2>
        <p><%= @flat.description %></p>
      </div>
    </div>

    <div class="col-4">
      <div class="booking-form p-3 mb-3">
        <h3>Book this place!</h3>
        <form action="">
          <div class="input-group align-items-center">
            <span class="input-label">From:</span>
            <input type="text" class="form-control" placeholder="12/10/2020">
          </div>
          <div class="input-group align-items-center mt-2">
            <span class="input-label">To:</span>
            <input type="text" class="form-control" placeholder="18/10/2020">
          </div>
          <input type="submit" value="Book" class="btn btn-success mt-2">
        </form>
      </div>
      <div class="flat-details p-3 mb-3">
        <h2>Details</h2>
        <div class="d-flex">
          <p class="mb-0"><i class="fas fa-users"></i> <%= @flat.number_of_guests %></p>
          <p class="mb-0 ml-3"><i class="fas fa-euro-sign"></i> <%= @flat.price_per_night %></p>
        </div>
      </div>
      <div class="socials p-3 d-flex justify-content-between align-items-center">
        <p class="mb-0">Share</p>
        <div class="share-buttons">
          <a href="#"><i class="fab fa-facebook-square"></i></a>
          <a href="#"><i class="fab fa-twitter-square"></i></a>
          <a href="#"><i class="fab fa-pinterest-square"></i></a>
          <a href="#"><i class="fas fa-envelope-square"></i></a>
        </div>
      </div>
    </div>
  </div>
</div>


